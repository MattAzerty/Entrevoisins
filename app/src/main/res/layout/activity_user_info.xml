<android.support.design.widget.CoordinatorLayout
    android:id="@+id/fragment_detail_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.neighbour_list.UserInfoActivity">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E3E3E3">

        <ImageView
            android:id="@+id/user_info_activity_avatar"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:adjustViewBounds="true"
            android:foregroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/user_info_activity_textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_info_activity_avatar"
            android:layout_alignBottom="@id/user_info_activity_avatar"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="NeighbourName"
            android:textColor="#FFFFFF"
            android:textSize="32dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/user_info_activity_cardView1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/user_info_activity_avatar"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:backgroundTint="#FFFFFF"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp" >

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/user_info_activity_textview_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:text="NeighbourName2"
                    android:textColor="#212121"
                    android:textSize="26dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="46dp"
                    android:background="#4DAAAAAA"
                    android:layout_height="1dp"/>

            <ImageButton
                android:id="@+id/user_info_activity_imageButtonAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:background="#00FFFFFF"
                android:tint="#FF91CA"
                app:srcCompat="@drawable/ic_baseline_location_on_white_24dp" />

            <TextView
                android:id="@+id/user_info_activity_textview_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_info_activity_imageButtonAddress"
                android:layout_marginStart="50dp"
                android:layout_marginTop="4dp"
                android:elevation="4dp"
                android:text="mon adresse"
                android:textColor="#787878"
                android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/user_info_activity_imageButtonPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_info_activity_imageButtonAddress"
                    android:layout_alignLeft="@+id/user_info_activity_imageButtonAddress"
                    android:layout_marginTop="28dp"
                    android:background="#00FFFFFF"
                    android:tint="#FF91CA"
                    app:srcCompat="@drawable/ic_baseline_phone_white_24dp" />

                <TextView
                    android:id="@+id/user_info_activity_textview_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/user_info_activity_imageButtonPhone"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="4dp"
                    android:elevation="4dp"
                    android:text="mon téléphone"
                    android:textColor="#787878"
                    android:textSize="12dp" />

            <ImageButton
                android:id="@+id/user_info_activity_imageButtonSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_info_activity_imageButtonPhone"
                android:layout_alignLeft="@+id/user_info_activity_imageButtonPhone"
                android:layout_marginTop="28dp"
                android:background="#00FFFFFF"
                android:tint="#FF91CA"
                app:srcCompat="@drawable/ic_baseline_language_white_24dp" />

                <TextView
                    android:id="@+id/user_info_activity_textview_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/user_info_activity_imageButtonSocial"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="4dp"
                    android:elevation="4dp"
                    android:text="mon téléphone"
                    android:textColor="#787878"
                    android:textSize="12dp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/user_info_activity_cardView2"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_below="@id/user_info_activity_cardView1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            app:backgroundTint="#FFFFFF"
            app:cardElevation="0dp"
            app:cardCornerRadius="5dp" />

        <TextView
            android:id="@+id/user_info_activity_textview_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_info_activity_cardView2"
            android:layout_alignTop="@id/user_info_activity_cardView2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:elevation="4dp"
            android:text="A propos de moi"
            android:textColor="#212121"
            android:textSize="26dp" />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_alignTop="@id/user_info_activity_cardView2"
            android:layout_marginTop="46dp"
            android:background="#4DAAAAAA"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/user_info_activity_textview_aboutme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_info_activity_cardView2"
            android:layout_below="@id/user_info_activity_textview_about"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:text="A propos de moi"
            android:textColor="#787878"
            android:textSize="12dp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_info_activity_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_star_border_white_24dp"
        android:tint="#FFC107"
        app:backgroundTint="#FFFFFF"
        app:layout_anchor="@id/user_info_activity_avatar"
        app:layout_anchorGravity="bottom|right|end" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/user_info_activity_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_baseline_arrow_back_white_24dp"
        app:backgroundTint="@android:color/transparent"
        app:elevation="0dp"
        app:maxImageSize="@dimen/design_fab_size_mini"
        app:pressedTranslationZ="0dp" />


</android.support.design.widget.CoordinatorLayout>